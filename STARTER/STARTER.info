; The name and description of the theme used on the admin/build/themes page.
name        = STARTER
description = This is a starting point for your custom theme.

core        = 6.x
engine      = phptemplate
base theme  = squareone

; Including our stylesheets.
stylesheets[all][]   = css/base.css
stylesheets[print][] = css/print.css

; Set the conditional stylesheets that are processed by IE.
conditional-stylesheets[if IE][all][] = css/ie.css

; Adding some scripts.
scripts[]   = js/ashlib.js

; Defining our regions.
regions[left]           = left sidebar
regions[right]          = right sidebar
regions[navbar]         = navigation bar
regions[content_top]    = content top
regions[content]				= content
regions[content_bottom] = content bottom
regions[header]         = header
regions[footer]         = footer
regions[closure_region] = closure

; Defining our theme's features.
features[] = logo
features[] = name
features[] = slogan
features[] = mission
features[] = node_user_picture
features[] = comment_user_picture
features[] = search
features[] = favicon
features[] = primary_links
features[] = secondary_links

  ; Set the default settings to be used in theme-settings.php
settings[zen_block_editing]        = 1
settings[zen_breadcrumb]           = yes
